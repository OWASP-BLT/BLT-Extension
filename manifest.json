{
   "author": "OWASP BLT",
   "background": {
      "service_worker": "background.js"
   },
   "action": {
      "default_icon": {
         "19": "img/icon19.png",
         "38": "img/icon38.png"
      },
      "default_title": "OWASP BLT-Extension",
      "default_popup": "popup.html"
   },
   "default_locale": "en",
   "description": "OWASP BLT let's you get points for testing and finding issues!",
   "homepage_url": "https://www.owasp.org/BLT/",
   "icons": {
      "128": "img/icon128.png",
      "19": "img/icon19.png",
      "24": "img/icon24.png",
      "256": "img/icon256.png",
      "32": "img/icon32.png",
      "38": "img/icon38.png"
   },
   "manifest_version": 3,
   "name": "OWASP BLT-Extension",
   "short_name": "BLT-Extension",
   "permissions": [ "activeTab", "storage", "notifications", "clipboardWrite", "downloads", "tabCapture" ],
   "host_permissions": [ "<all_urls>" ],
   "web_accessible_resources": [
      {
         "resources": [ "jobtracking.html", "jobtracking.js", "screenshot.html" ],
         "matches": [ "<all_urls>" ]
      }
   ],
   "content_scripts": [
      {
         "matches": ["*://*.linkedin.com/jobs/*"],
         "js": ["linkedin-monitor.js"]
      },
      {
         "matches": ["*://*.wellfound.com/jobs*"],
         "js": ["wellfound-monitor.js"]
      }
   ]
}
